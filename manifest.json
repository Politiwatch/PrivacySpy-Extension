{
    "manifest_version": 2,
    "name": "PrivacySpy",
    "version": "1.0",
    "description": "PrivacySpy provides brief yet comprehensive privacy policy summaries and ratings.",
    "homepage_url": "https://privacyspy.org",
    "icons": {
        "48": "icons/privacyspy-48.png",
        "96": "icons/privacyspy-96.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "https://privacyspy.org/api"
    ],
    "browser_action": {
        "default_title": "PrivacySpy",
        "default_popup": "popup/index.html",
        "default_icon": {
            "16": "icons/privacyspy-16.png",
            "32": "icons/privacyspy-32.png",
            "64": "icons/privacyspy-64.png"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "icons/privacyspy-96.png"
    ]
}